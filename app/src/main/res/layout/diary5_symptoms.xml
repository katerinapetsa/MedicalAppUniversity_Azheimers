<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/diary_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ehealth.lab.university.personal_report.DiaryMain">


    <FrameLayout
            android:id="@+id/diary5_symptoms"
            style="@style/AlertDialog.AppCompat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/symptoms_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <TextView
                    android:id="@+id/symptoms"
                    android:layout_width="360dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:gravity="center_horizontal"
                    android:text="Symptoms?"
                    android:textAlignment="viewStart"
                    android:textColor="@color/primary"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <RadioGroup
                        android:id="@+id/radioSymptoms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/check_yes"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:checked="false"
                            android:fontFamily="sans-serif-smallcaps"
                            android:onClick="symptoms"
                            android:text="@string/yes"
                            android:textSize="18sp" />

                        <RadioButton
                            android:id="@+id/check_no"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:checked="false"
                            android:fontFamily="sans-serif-smallcaps"
                            android:onClick="symptoms"
                            android:text="@string/no"
                            android:textSize="18sp" />
                    </RadioGroup>
                </LinearLayout>

                <!--android:onClick="onPainQualityClicked" -->

                <!--android:onClick="onPainQualityClicked" -->

            </LinearLayout>

            <LinearLayout
                android:id="@+id/symptoms_wrapper1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <TextView
                    android:id="@+id/symptoms_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="sans-serif"
                    android:gravity="center_horizontal"
                    android:text="If yes which Symptoms are you experiencing?"
                    android:textAlignment="viewStart"
                    android:textColor="@color/primary"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <CheckBox
                    android:id="@+id/symptom1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:onClick="onSymptomsClicked"
                    android:text="Aggression/ Violence"
                    android:textColor="@color/primary"
                    android:textSize="16sp" />

                <CheckBox
                    android:id="@+id/symptom2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:onClick="onSymptomsClicked"
                    android:text="Agitation"
                    android:textColor="@color/primary"
                    android:textSize="16sp" />

                <CheckBox
                    android:id="@+id/symptom3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:onClick="onSymptomsClicked"
                    android:text="Anxiety"
                    android:textColor="@color/primary"
                    android:textSize="16sp" />

                <CheckBox
                    android:id="@+id/symptom4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:onClick="onSymptomsClicked"
                    android:text="Apathy"
                    android:textColor="@color/primary"
                    android:textSize="16sp" />

                <CheckBox
                    android:id="@+id/symptom5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:onClick="onSymptomsClicked"
                    android:text="Bedsores/ulcers"
                    android:textColor="@color/primary"
                    android:textSize="16sp" />

                <CheckBox
                    android:id="@+id/symptom6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:onClick="onSymptomsClicked"
                    android:text="Change in mood"
                    android:textColor="@color/primary"
                    android:textSize="16sp" />

                <CheckBox
                    android:id="@+id/symptom7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:onClick="onSymptomsClicked"
                    android:text="Change in personality"
                    android:textColor="@color/primary"
                    android:textSize="16sp" />

                <CheckBox
                    android:id="@+id/symptom8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:onClick="onSymptomsClicked"
                    android:text="Confusion about place"
                    android:textColor="@color/primary"
                    android:textSize="16sp" />

                <CheckBox
                    android:id="@+id/symptom9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Confusion about time" />

                <CheckBox
                    android:id="@+id/symptom10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Decreased interest in activities" />

                <CheckBox
                    android:id="@+id/symptom11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Delusions" />

                <CheckBox
                    android:id="@+id/symptom12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Depression" />

                <CheckBox
                    android:id="@+id/symptom13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Difficulty driving" />

                <CheckBox
                    android:id="@+id/symptom14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Difficulty reading" />

                <CheckBox
                    android:id="@+id/symptom15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Difficulty with bathing/dressing" />

                <CheckBox
                    android:id="@+id/symptom16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Falling" />

                <CheckBox
                    android:id="@+id/symptom17"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Insomnia" />

                <CheckBox
                    android:id="@+id/symptom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Memory Loss" />

                <CheckBox
                    android:id="@+id/symptom18"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Misplacing/ losing things" />

                <CheckBox
                    android:id="@+id/symptom19"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Panic Attacks" />

                <CheckBox
                    android:id="@+id/symptom20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Repeating Questions" />

                <CheckBox
                    android:id="@+id/symptom21"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Social withdrawal" />

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</ScrollView>
