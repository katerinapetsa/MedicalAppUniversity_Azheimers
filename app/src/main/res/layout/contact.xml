<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/contactLayout"
    android:orientation="vertical"
    tools:context="com.example.ehealth.lab.university.disease.description.MGInformation">

<LinearLayout
    android:id="@+id/header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp"
    android:background="@color/primary"
    android:orientation="vertical">

</LinearLayout>

<FrameLayout
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:id="@+id/contactTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="18dp"
                android:background="@null"
                android:fontFamily="sans-serif"
                android:text="Alzheimer's Association Cyprus"
                android:textColor="@color/primary"
                android:textSize="25sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/phoneImage"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignStart="@+id/emailImage"
                android:layout_below="@+id/contactTitle"
                app:srcCompat="@drawable/local_phone_black_18dp" />

            <TextView
                android:id="@+id/contactPhone"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@+id/contactTitle"
                android:layout_alignStart="@+id/contactEmail"
                android:layout_marginTop="8dp"
                android:background="@null"
                android:fontFamily="sans-serif"
                android:text="+357 24627104"
                android:textColor="@color/primary"
                android:textSize="16sp"
                android:textStyle="normal" />

            <ImageView
                android:id="@+id/emailImage"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignStart="@+id/contactTitle"
                android:layout_below="@+id/phoneImage"
                android:layout_marginTop="10dp"
                app:srcCompat="@mipmap/email" />

            <TextView
                android:id="@+id/contactEmail"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@+id/contactPhone"
                android:layout_alignEnd="@+id/contactTitle"
                android:layout_marginTop="8dp"
                android:background="@null"
                android:fontFamily="sans-serif"
                android:text="alzhcyprus@cytanet.com.cy"
                android:textColor="@color/primary"
                android:textSize="15sp"
                android:textStyle="normal" />


            <ImageView
                android:id="@+id/websiteImage"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_alignStart="@+id/emailImage"
                android:layout_below="@+id/emailImage"
                app:srcCompat="@mipmap/website" />

            <ImageView
                android:id="@+id/fbImage"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignStart="@+id/emailImage"
                android:layout_below="@+id/websiteImage"
                android:layout_marginTop="10dp"
                app:srcCompat="@mipmap/facebook" />

            <TextView
                android:id="@+id/facebook"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@+id/website"
                android:layout_alignStart="@+id/contactEmail"
                android:layout_marginTop="8dp"
                android:background="@null"
                android:fontFamily="sans-serif"
                android:text="Σύνδεσμος Στήριξης Ατόμων της νόσου Αλτσχάϊμερ."
                android:textColor="@color/primary"
                android:textSize="16sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/website"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@+id/contactEmail"
                android:layout_alignStart="@+id/contactEmail"
                android:layout_marginTop="8dp"
                android:background="@null"
                android:fontFamily="sans-serif"
                android:text="https://www.facebook.com/cyprus.alzheimer.association/"
                android:textColor="@color/primary"
                android:textSize="16sp"
                android:textStyle="normal" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@+id/contactTitle"
                app:srcCompat="@drawable/cyprus_alzheimers" />

        </RelativeLayout>
    </ScrollView>
</FrameLayout>
</LinearLayout>