<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/list_day_medications">


    <ImageView
        android:id="@+id/imageDayMed"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/nameDayMed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageDayMed"
        android:layout_marginStart="30dp"
        android:layout_toEndOf="@+id/imageDayMed"
        android:layout_toStartOf="@+id/timeTakeMed"
        android:fontFamily="sans-serif-condensed"
        android:text="TextView"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/dosageDayMed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/nameDayMed"
        android:layout_below="@+id/nameDayMed"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="5dp"
        android:fontFamily="sans-serif-condensed"
        android:text="TextView"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/instructionsDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/dosageDayMed"
        android:layout_alignBottom="@+id/dosageDayMed"
        android:layout_marginStart="17dp"
        android:layout_toEndOf="@+id/dosageDayMed"
        android:fontFamily="sans-serif-condensed"
        android:text="TextView"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/timeTakeMed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/nameDayMed"
        android:layout_alignBottom="@+id/nameDayMed"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="19dp"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/cyan_500"
        android:textSize="24sp"
        android:textStyle="bold" />




</RelativeLayout>