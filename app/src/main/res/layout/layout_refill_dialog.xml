<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">


    <TextView
        android:id="@+id/remain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="sans-serif"
        android:text="@string/nowYouHave"
        android:textColor="@color/primary"
        android:textSize="16sp" />


    <TextView
        android:id="@+id/numOfMeds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/remain"
        android:layout_marginStart="6dp"
        android:layout_toEndOf="@+id/remain"
        android:fontFamily="sans-serif"
        android:text="1111"
        android:textColor="@color/primary"
        android:textSize="17sp" />


    <TextView
        android:id="@+id/meds1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/numOfMeds"
        android:layout_alignBottom="@+id/numOfMeds"
        android:layout_marginStart="27dp"
        android:layout_toEndOf="@+id/refillNum"
        android:fontFamily="sans-serif"
        android:text="@string/medications_small"
        android:textColor="@color/primary"
        android:textSize="17sp" />


    <TextView
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/remain"
        android:layout_below="@id/remain"
        android:layout_marginTop="18dp"
        android:fontFamily="sans-serif"
        android:text="@string/add"
        android:textColor="@color/primary"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/refillNum"
        android:layout_width="85dp"
        android:layout_height="40dp"
        android:layout_below="@+id/remain"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/add"
        android:fontFamily="sans-serif"
        android:inputType="textPersonName|number"
        android:textAlignment="center"
        android:textColor="@color/primary"
        android:textSize="17sp" />


    <TextView
        android:id="@+id/meds2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/refillNum"
        android:layout_alignBottom="@+id/refillNum"
        android:layout_alignEnd="@+id/meds1"
        android:fontFamily="sans-serif"
        android:text="@string/medications_small"
        android:textColor="@color/primary"
        android:textSize="16sp" />

</RelativeLayout>