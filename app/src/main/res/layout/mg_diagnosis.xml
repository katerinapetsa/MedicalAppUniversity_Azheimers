<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ehealth.lab.university.disease.description.DiseaseMain">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                tools:context=".disease.description.MGInformation">

                <TextView
                    android:id="@+id/title_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="sans-serif-smallcaps"
                    android:gravity="center_horizontal"
                    android:text="@string/diagnosis_Title"
                    android:textColor="@color/primary"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/paragraph_info_1"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_alignStart="@+id/paragraph_info_2"
                    android:layout_below="@+id/title_info"
                    android:layout_toStartOf="@+id/mg_diagnosis"
                    android:background="@null"
                    android:fontFamily="sans-serif-condensed"
                    android:text="@string/diagnosis_1"
                    android:textColor="@color/primary"
                    android:textSize="16sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/paragraph_info_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/paragraph_info_1"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:background="@null"
                    android:fontFamily="sans-serif-condensed"
                    android:text="@string/diagnosis_2"
                    android:textColor="@color/primary"
                    android:textSize="16sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/paragraph_info_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/paragraph_info_1"
                    android:layout_below="@+id/paragraph_info_2"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="10dp"
                    android:background="@null"
                    android:fontFamily="sans-serif-condensed"
                    android:text="@string/diagnosis_3"
                    android:textColor="@color/primary"
                    android:textSize="16sp"
                    android:textStyle="normal" />

                <ImageView
                    android:id="@+id/mg_diagnosis"
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:layout_above="@+id/paragraph_info_2"
                    android:layout_alignEnd="@+id/paragraph_info_2"
                    android:gravity="center_horizontal"
                    android:scaleType="fitXY"
                    android:src="@mipmap/diagnosis" />

            </RelativeLayout>
        </ScrollView>
    </FrameLayout>
</LinearLayout>

