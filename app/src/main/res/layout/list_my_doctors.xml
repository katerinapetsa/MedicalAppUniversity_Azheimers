<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/list_view_all_doctors">


    <ImageView
        android:id="@+id/doctor_img"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/nameDoctor"
        android:layout_marginStart="18dp"
        android:layout_marginTop="13dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/nameDoctor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="42dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/doctor_img"
        android:fontFamily="sans-serif-condensed"
        android:text="TextView"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/specialityDoctor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/nameDoctor"
        android:layout_below="@+id/nameDoctor"
        android:fontFamily="sans-serif-condensed"
        android:text="TextView"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/phoneDoctor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/doctor_img"
        android:layout_marginEnd="12dp"
        android:fontFamily="sans-serif-condensed"
        android:text="TextView"
        android:textSize="18sp" />

</RelativeLayout>